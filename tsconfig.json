{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es6",
      "dom"
    ],
    "module": "es6",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist/",
    "sourceMap": false,
    "jsx": "react",
    "types": ["react"]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "public",
    "dist",
    "demo",
    ".cache",
    ".github"
  ]
}
